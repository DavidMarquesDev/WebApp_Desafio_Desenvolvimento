@model WebApp_Desafio_FrontEnd.ViewModels.SolicitantesViewModel

@using WebApp_Desafio_FrontEnd.ViewModels

<div class="row wrapper border-bottom white-bg page-heading header-title">
    <div class="col-sm-12 col-md-6 text-left align-self-center order-md-0 order-12">
        <h2>@ViewData["Title"]</h2>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">


        <form id="form" asp-action="Cadastrar" class="wizard-big" enctype="multipart/form-data" role="form" onsubmit="return false;">

            <input type="hidden" asp-for="ID" />

            <div class="row">
                <div class="form-group col-lg-7 col-md-6 col-sm-12">
                    <label class="form-label" asp-for="Solicitante"></label>
                    <input type="text" class="form-control" asp-for="Solicitante" maxlength="30">
                    <span class="text-danger" asp-validation-for="Solicitante"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-lg-2 col-md-6 col-sm-12">
                    <label class="form-label" asp-for="CPF"></label>
                    <input type="text" class="form-control" asp-for="CPF">
                    <span class="text-danger" asp-validation-for="CPF"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-lg-2 col-md-6 col-sm-12">
                    <label class="form-label" asp-for="DataCriacao"></label>

                    <div class="input-group date" data-provide="datepicker">
                        <input type="text" class="form-control" asp-for="DataCriacao" asp-format="{0:dd/MM/yyyy}" />
                        <div class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </div>
                    </div>
                    <span class="text-danger" asp-validation-for="DataCriacao"></span>
                </div>

            </div>
        </form>
    </div>
</div>

<div class="panel-body">
    <fieldset>
        <div class="row">
            <div class="form-group col-sm-12 text-right float-right mb-0">
                <button type="button" id="btnCancelar" class="btn btn-outline btn-default" data-style="slide-left">Cancelar Edição</button>
                <button type="button" id="btnSalvar" class="btn btn-outline btn-primary" data-style="slide-left">Salvar Edição</button>
            </div>
        </div>
    </fieldset>
</div>

@section styles
    {
    <link rel="stylesheet" href="~/lib/sweetalert2/sweetalert2.min.css" />
}

@section scripts
    {
    <!-- SweetAlert2 -->
    <script src="~/lib/sweetalert2/sweetalert2.all.min.js"></script>
    <!-- Bootstrap Datepicker -->
    <script src="~/lib/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
    <script src="~/lib/bootstrap-datepicker/locales/bootstrap-datepicker.pt-br.min.js"></script>

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>

    <!-- Mascara de CPF -->
    <script src="~/lib/jQuery-Mask-Plugin-master/dist/jquery.mask.js"></script>

    <script src="~/js/Solicitantes/Cadastrar.js" asp-append-version="true"></script>


}
